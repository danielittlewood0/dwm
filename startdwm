# Script to run dwm on a constant loop, to allow restarting in place.
# Run 'killall startdwm' to close X and log out.
display
export SCREEN_NAME="shared"
st -e screen -S "$SCREEN_NAME" &
while true; do
    # Log stderror to a file 
    dwm 2> ~/.dwm.log
    # No error logging
    #dwm >/dev/null 2>&1
done
